<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="az.gov.e_health.esehiyye.ui.main.ChangePasswordFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">





        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/newPhoneLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <EditText
                android:inputType="phone"
                android:id="@+id/newPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Yeni mobil nömrə" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/repeatNewPhoneLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <EditText
                android:inputType="phone"
                android:id="@+id/repeatNewPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Yeni mobil nömrənin təkrarı" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/saveChanges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/gradient"
            android:text="Mobil nömrəni yenilə"
            android:textColor="@android:color/white" />
    </LinearLayout>

</FrameLayout>